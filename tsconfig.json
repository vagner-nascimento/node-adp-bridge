{
  "include": [
    "index.ts",
    "src",
    "src/*.js",
    "src/**/*.js",
    "config",
    "config/*.json",
    "scripts/**/*.json",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "test*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "lib": ["ES2018"]
}

FROM golang:alpine

ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64 \
    GO_ENV=DOCKER

WORKDIR /app

COPY . .

# Build app
RUN go mod download
RUN go build -o main .

# Install bash to wait-for-it script
RUN apk update && apk add bash

# Move app startup script to its properly folder
RUN mkdir /scripts
RUN mv ./wait-for-it.sh /scripts